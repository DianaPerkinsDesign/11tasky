<h1>All Issues</h1>
<ul class="issues-list" id="issuesList">
{% for issue in issues %}
  <li data-id={{ issue.id }}>
    <div class="button-wrapper">
      {% for prog in progress | reverse %}
        <button 
        class="level-{{prog.level}} no-sortable"
        data-type="completeness"
        data-amount={{prog.level}}
        data-behavior="changeCompleteness"
        >
        
        </button>
      {% endfor %}
    </div>
    <div class="issue-title">
      <h2><a href="{{ issue.html_url }}">{{ issue.title }}&nbsp;â†—</a></h2>
      <h3>{{ issue.repository.name }}</h3>
    </div>
    
  </li>
{% endfor %}
</ul>